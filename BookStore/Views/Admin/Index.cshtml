@model IEnumerable<Book>
    @{
        ViewBag.Title = "All Products";
        Layout = "_AdminLayout";
    }

        <table class="taЫe taЬle-striped table-bordered table-sm">
            <tr>
                <th class="text-right">Id</th>
                <th>Name</th>
                <th class="text-right">Price</th>
                <th class="text-center">Actions</th>
            </tr>

            @foreach (Book books in Model)
            {
                <tr>
                    <td  class="text-right">@books.BookId</td>
                    <td>@books.Name</td>
                    <td class="text-right">@books.Price</td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-bookId="@books.BookId">Edit</a>
                            <input type="hidden" name="BookId" value="@books.BookId" />
                            <button type="submit" class="btn btn-danger btn-sm"> Delete </button>
                        </form>
                    </td>
                </tr>
            }
            </table>
<div class="text-center">
     <a asp-action="Create" class="btn-primary">Add Product</a>
</div>
